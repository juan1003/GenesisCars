@model GenesisCars.Web.Models.Recommendations.RecommendationInputModel
@using GenesisCars.Application.Recommendations
@{
    ViewData["Title"] = "AI Recommendations";
    var recommendations = ViewBag.Recommendations as IReadOnlyCollection<RecommendedCarDto> ?? Array.Empty<RecommendedCarDto>();
}

<h2 class="mt-3">AI Recommendations</h2>
<p class="text-muted">Use the assistant to surface inventory that best matches a buyer's preferences.</p>

<form asp-action="Index" method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-4">
        <label asp-for="Budget" class="form-label"></label>
        <input asp-for="Budget" class="form-control" placeholder="e.g. 35000" />
        <span asp-validation-for="Budget" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="MinYear" class="form-label"></label>
        <input asp-for="MinYear" class="form-control" placeholder="e.g. 2020" />
        <span asp-validation-for="MinYear" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <label asp-for="Limit" class="form-label"></label>
        <input asp-for="Limit" class="form-control" />
        <span asp-validation-for="Limit" class="text-danger"></span>
    </div>
    <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-primary w-100">Generate</button>
    </div>
</form>

@if (recommendations.Count > 0)
{
    <div class="table-responsive mt-4">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Price</th>
                    <th>Match Score</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in recommendations)
            {
                <tr>
                    <td>@item.Model</td>
                    <td>@item.Year</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.MatchScore.ToString("0.##")</td>
                    <td>
                        <a asp-controller="Inventory" asp-action="Details" asp-route-id="@item.CarId" class="btn btn-sm btn-outline-secondary">View Car</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mt-4" role="alert">
        No recommendations yet. Provide buyer preferences and click Generate.
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
