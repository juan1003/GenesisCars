@model GenesisCars.Web.Models.Marketplace.MarketplaceListingEditModel
@using GenesisCars.Application.Marketplace
@{
  ViewData["Title"] = "Edit Marketplace Listing";
  var listing = ViewBag.Listing as MarketplaceListingDto;
}

<h1 class="mb-4">Edit Marketplace Listing</h1>

@if (listing is not null)
{
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="h6">Inventory Vehicle</h2>
      <p class="mb-1 fw-semibold">@listing.Car.Year @listing.Car.Model</p>
      <p class="text-muted mb-0">Inventory price: @listing.Car.InventoryPrice.ToString("C")</p>
    </div>
  </div>
}

<form asp-action="Edit" asp-route-id="@listing?.Id" method="post" class="row g-3">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="col-12 col-md-6">
    <label asp-for="AskingPrice" class="form-label"></label>
    <input asp-for="AskingPrice" class="form-control" />
    <span asp-validation-for="AskingPrice" class="text-danger"></span>
  </div>
  <div class="col-12">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Details" asp-route-id="@listing?.Id" class="btn btn-secondary ms-2">Cancel</a>
  </div>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
