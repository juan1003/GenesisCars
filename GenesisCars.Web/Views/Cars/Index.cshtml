@model IReadOnlyCollection<GenesisCars.Application.Inventory.CarDto>
@{
  ViewData["Title"] = "Inventory";
}

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="display-6">Inventory</h1>
  <a class="btn btn-primary" asp-action="Create">Add Car</a>
</div>

@if (!Model.Any())
{
  <div class="alert alert-info">No cars have been added to the inventory.</div>
}
else
{
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Model</th>
          <th scope="col">Year</th>
          <th scope="col">Price</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var car in Model)
        {
          <tr>
            <td>@car.Model</td>
            <td>@car.Year</td>
            <td>@car.Price.ToString("C")</td>
            <td class="text-end">
              <div class="btn-group" role="group">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@car.Id">Details</a>
                <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@car.Id">Edit</a>
                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@car.Id">Delete</a>
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
}