@model GenesisCars.Application.Inventory.CarDto
@{
  ViewData["Title"] = "Car Details";
}

<h1 class="display-6">Car Details</h1>

<dl class="row">
  <dt class="col-sm-3">Model</dt>
  <dd class="col-sm-9">@Model.Model</dd>

  <dt class="col-sm-3">Year</dt>
  <dd class="col-sm-9">@Model.Year</dd>

  <dt class="col-sm-3">Price</dt>
  <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

  <dt class="col-sm-3">Created</dt>
  <dd class="col-sm-9">@Model.CreatedAtUtc.ToLocalTime().ToString("f")</dd>

  <dt class="col-sm-3">Last Updated</dt>
  <dd class="col-sm-9">@Model.UpdatedAtUtc.ToLocalTime().ToString("f")</dd>
</dl>

<div class="mt-4">
  <a class="btn btn-secondary" asp-action="Index">Back to List</a>
  <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
</div>