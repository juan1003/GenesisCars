@model GenesisCars.Application.Inventory.CarDto
@{
  ViewData["Title"] = "Delete Car";
}

<h1 class="display-6">Delete Car</h1>

<h5 class="text-danger">Are you sure you want to remove this car from the inventory?</h5>

<dl class="row mt-3">
  <dt class="col-sm-3">Model</dt>
  <dd class="col-sm-9">@Model.Model</dd>

  <dt class="col-sm-3">Year</dt>
  <dd class="col-sm-9">@Model.Year</dd>

  <dt class="col-sm-3">Price</dt>
  <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
</dl>

<form asp-action="Delete" method="post">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
</form>