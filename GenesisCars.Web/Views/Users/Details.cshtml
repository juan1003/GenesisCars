@model GenesisCars.Application.Users.UserDto
@{
    ViewData["Title"] = "User Details";
}

<h1 class="display-6">User Details</h1>

<dl class="row">
    <dt class="col-sm-3">First Name</dt>
    <dd class="col-sm-9">@Model.FirstName</dd>

    <dt class="col-sm-3">Last Name</dt>
    <dd class="col-sm-9">@Model.LastName</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Created</dt>
    <dd class="col-sm-9">@Model.CreatedAtUtc.ToLocalTime().ToString("f")</dd>

    <dt class="col-sm-3">Last Updated</dt>
    <dd class="col-sm-9">@Model.UpdatedAtUtc.ToLocalTime().ToString("f")</dd>
</dl>

<div class="mt-4">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
</div>
