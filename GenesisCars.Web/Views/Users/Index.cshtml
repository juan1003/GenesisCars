@model IReadOnlyCollection<GenesisCars.Application.Users.UserDto>
@{
    ViewData["Title"] = "Users";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-6">Users</h1>
    <a class="btn btn-primary" asp-action="Create">Create User</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No users have been created yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Created</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.CreatedAtUtc.ToLocalTime().ToString("g")</td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@user.Id">Details</a>
                                <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
