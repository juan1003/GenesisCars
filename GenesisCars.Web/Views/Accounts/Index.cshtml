@model IReadOnlyCollection<AccountDto>
@{
  ViewData["Title"] = "Accounts";
}

<h1 class="mb-4">Accounts</h1>

@if (TempData["StatusMessage"] is string statusMessage)
{
  <div class="alert alert-success" role="alert">@statusMessage</div>
}

<p>
  <a asp-action="Create" class="btn btn-primary">Create Account</a>
</p>

@if (Model.Count == 0)
{
  <div class="alert alert-info" role="alert">
    No accounts found. Create one to get started.
  </div>
}
else
{
  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th>Owner</th>
          <th class="text-end">Balance</th>
          <th>Created</th>
          <th>Updated</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var account in Model)
        {
          <tr>
            <td>@account.OwnerName</td>
            <td class="text-end">@account.Balance.ToString("C")</td>
            <td>@account.CreatedAtUtc.ToLocalTime().ToString("g")</td>
            <td>@account.UpdatedAtUtc.ToLocalTime().ToString("g")</td>
            <td class="text-end">
              <a asp-action="Details" asp-route-id="@account.Id" class="btn btn-sm btn-outline-primary me-2">Details</a>
              <a asp-action="Delete" asp-route-id="@account.Id" class="btn btn-sm btn-outline-danger">Delete</a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
}