@model AccountInputModel
@{
  ViewData["Title"] = "Create Account";
}

<h1 class="mb-4">Create Account</h1>

<form asp-action="Create" method="post" class="row g-3">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="col-12">
    <label asp-for="OwnerName" class="form-label"></label>
    <input asp-for="OwnerName" class="form-control" />
    <span asp-validation-for="OwnerName" class="text-danger"></span>
  </div>
  <div class="col-12 col-md-6">
    <label asp-for="InitialBalance" class="form-label"></label>
    <input asp-for="InitialBalance" class="form-control" />
    <span asp-validation-for="InitialBalance" class="text-danger"></span>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
  </div>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}